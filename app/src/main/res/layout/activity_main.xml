<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/tDetails"
        android:layout_width="328dp"
        android:layout_height="422dp"
        android:layout_marginTop="16dp"
        android:text="Hi Beluz!!!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButton"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/bClose"
        android:layout_width="151dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#FFEB3B"
        android:text="Close App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EC1A0A"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_delete"
        app:iconTint="#E32F2F"
        app:layout_constraintBottom_toTopOf="@id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bScan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003" />

    <Button
        android:id="@+id/bScan"
        android:layout_width="151dp"
        android:layout_height="61dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#0DA114"
        android:onClick="scanning"
        android:text="Scan WiFi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_search_category_default"
        app:iconSize="35dp"
        app:layout_constraintBottom_toTopOf="@id/imageButton"
        app:layout_constraintEnd_toStartOf="@+id/bClose"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="365dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#82C4F8"
        app:layout_constraintBottom_toTopOf="@+id/tDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bClose"
        app:layout_constraintVertical_bias="0.156"
        app:srcCompat="?attr/actionModeBackground"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>